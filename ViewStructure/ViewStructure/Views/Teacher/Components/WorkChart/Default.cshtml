@using ViewStructure.Models;
@model List<WorkChart>

<table class="table table-hover">
	<tr>
		<th>Öğretmen</th>
		<th>Pazartesi</th>
		<th>Salı</th>
		<th>Çarşamba</th>
		<th>Perşembe</th>
		<th>Cuma</th>
	</tr>

	@foreach (WorkChart item in Model)
	{
		<tr>
			<td>@item.TeacherName</td>

			@foreach ( bool DoesItWork in item.Chart)
			{
				string x = DoesItWork ? "X" : "";
				<td>@x</td>

			}
		</tr>
	}

</table>
